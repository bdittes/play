{
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {}
  },
  "include": ["js"],
  "exclude": ["node_modules", "**/node_modules/*", "fixtures", "dist", "prod"]
}
